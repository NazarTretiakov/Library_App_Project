@{
    ViewBag.Title = "Forum";
    ViewBag.StylesPath = "~/css/forum.css";
}


<div class="container-for-header-panel">
    <header class="header">
        <ul class="header-items">
            <li class="header-items-item header-items-item-logo">
                <a href="/home"><img class="header-items-item-logo-image" src="/Images/Logo.jpg" alt="Logo of page"></a>
                <a class="header-link-title" href=""><h1 class="header-items-item-logo-title">Forum</h1></a>
            </li>
            <li class="header-items-links">
                <ul class="header-items-links-list">
                    <li class="header-items-links-list-item header-items-links-list-register"><span class="header-items-links-list-item-register-span"><a class="header-link" asp-controller="Home" asp-action="SignIn">Sign in</a></span></li>
                </ul>
            </li>
        </ul>
    </header>


    <section class="search-panel">
        <form class="search-panel-form">
            <ul class="search-panel-form-search">
                <li class="search-panel-form-search-icon">
                    <div class="search-panel-form-search-icon-div"></div>
                </li>
                <li class="search-panel-form-search-input">
                    <input class="search-panel-form-search-input-element" type="text" placeholder="Search">
                </li>
            </ul>
            <ul class="search-panel-form-dropdown">
                <li class="search-panel-form-dropdown-select">
                    <select class="search-panel-form-dropdown-select-element">
                        <option class="search-panel-form-dropdown-select-element-author" value="all">All results</option>
                        <option class="search-panel-form-dropdown-select-element-author" value="author">Username</option>
                        <option class="search-panel-form-dropdown-select-element-title" value="title">Title</option>
                        <option class="search-panel-form-dropdown-select-element-genre" value="genre">Topic</option>
                    </select>
                </li>
                <li class="search-panel-form-dropdown-arrow">
                    <div class="search-panel-form-dropdown-arrow-div"></div>
                </li>
            </ul>
            <button class="search-panel-form-button">Search</button>
        </form>
    </section>
</div>

