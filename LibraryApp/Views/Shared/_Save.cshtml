@model Post


@if (ViewData["IsSaved"] != null && (bool)ViewData["IsSaved"] == true)
{
    <svg class="post-items-create-comment-items-interaction-items-save-element post-items-create-comment-items-interaction-items-save-element-active"
         xmlns="http://www.w3.org/2000/svg"
         height="30px"
         viewBox="0 -960 960 960"
         width="30px"
         data-post-id="@Model.PostId">
        <path d="M200-120v-640q0-33 23.5-56.5T280-840h400q33 0 56.5 23.5T760-760v640L480-240 200-120Z"
              fill="black" />
    </svg>
}
else if (ViewData["IsSaved"] != null && (bool)ViewData["IsSaved"] == false)
{
    <img class="post-items-create-comment-items-interaction-items-save-element" 
         src="~/Images/Icons/Save.svg" 
         alt="Icon of save"
         data-post-id="@Model.PostId">
}